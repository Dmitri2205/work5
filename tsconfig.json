{
    "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "declaration":true,  // Ensure that .d.ts files are created by tsc, but not .js files
    // "emitDeclarationOnly": true,
    "isolatedModules": true,//  safely transpile files in the TypeScript project
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "components":["components"],
      "styles":["styles"],
      "images":["img"]
    },
    "lib": ["es2015", "es2016", "dom", "es2018.promise"]
    }
  }